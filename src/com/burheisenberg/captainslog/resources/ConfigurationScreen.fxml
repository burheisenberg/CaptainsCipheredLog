<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.burheisenberg.captainslog.ConfigurationController"
          prefHeight="600.0" prefWidth="900.0">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <Label text="Log's Title: " GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="60"/>
            <TextField fx:id="titleTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0" minWidth="60"/>
            <TextArea fx:id="contentTextArea" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      wrapText="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
            <Label text="Date: " GridPane.rowIndex="2" GridPane.columnIndex="0" minWidth="60"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
